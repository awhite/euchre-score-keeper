<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/scores_names"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/below_names"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/team_1_info"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/score1"
                android:layout_width="@dimen/score"
                android:layout_height="@dimen/score"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/below_score"
                android:background="@drawable/back"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black_alpha_text"
                android:textSize="@dimen/score_text"
                android:theme="@style/AppTheme" />

            <TextView
                android:id="@+id/team1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_below="@+id/score1"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Player 1 and Player 3"
                android:textColor="@color/black_alpha_text"
                android:textSize="@dimen/team_name"
                android:theme="@style/AppTheme" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/team_2_info"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/score2"
                android:layout_width="@dimen/score"
                android:layout_height="@dimen/score"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/below_score"
                android:background="@drawable/back"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black_alpha_text"
                android:textSize="@dimen/score_text"
                android:theme="@style/AppTheme" />

            <TextView
                android:id="@+id/team2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_below="@+id/score2"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="Player 2 and Player 4"
                android:textColor="@color/black_alpha_text"
                android:textSize="@dimen/team_name"
                android:theme="@style/AppTheme" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/team_layouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scores_names">

        <LinearLayout
            android:id="@+id/team_1_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="false"
            android:orientation="horizontal">

            <Button
                android:id="@+id/p1t1"
                android:layout_width="@dimen/button"
                android:layout_height="@dimen/button"
                android:layout_marginBottom="@dimen/below_buttons"
                android:backgroundTint="@color/colorPrimary"
                android:clickable="true"
                android:text="+1"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/button_text" />

            <Button
                android:id="@+id/p2t1"
                android:layout_width="@dimen/button"
                android:layout_height="@dimen/button"
                android:layout_marginBottom="@dimen/below_buttons"
                android:backgroundTint="@color/colorPrimary"
                android:clickable="true"
                android:text="+2"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/button_text" />

            <Button
                android:id="@+id/p4t1"
                android:layout_width="@dimen/button"
                android:layout_height="@dimen/button"
                android:backgroundTint="@color/colorPrimary"
                android:clickable="true"
                android:text="+4"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/button_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/team_2_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="false"
            android:orientation="horizontal">

            <Button
                android:id="@+id/p1t2"
                android:layout_width="@dimen/button"
                android:layout_height="@dimen/button"
                android:layout_marginBottom="@dimen/below_buttons"
                android:backgroundTint="@color/colorPrimary"
                android:clickable="true"
                android:text="+1"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/button_text" />

            <Button
                android:id="@+id/p2t2"
                android:layout_width="@dimen/button"
                android:layout_height="@dimen/button"
                android:layout_marginBottom="@dimen/below_buttons"
                android:backgroundTint="@color/colorPrimary"
                android:clickable="true"
                android:text="+2"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/button_text" />

            <Button
                android:id="@+id/p4t2"
                android:layout_width="@dimen/button"
                android:layout_height="@dimen/button"
                android:backgroundTint="@color/colorPrimary"
                android:clickable="true"
                android:text="+4"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/button_text" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_buttons"
        style="?android:attr/buttonBarStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/show_players_next_deal"
            style="?android:attr/buttonBarStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/new_game"
                style="?android:buttonBarButtonStyle"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.0"
                android:text="@string/new_game"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/next_deal"
                style="?android:buttonBarButtonStyle"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/next_deal"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>

        <Button
            android:id="@+id/reset"
            style="?android:buttonBarButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/reset"
            android:textColor="@color/red" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@id/team_layouts"
        android:layout_alignTop="@+id/scores_names"
        android:layout_below="@+id/team_layouts"
        android:layout_centerHorizontal="true"
        android:alpha="0.12"
        android:background="@android:color/black" />

</RelativeLayout>